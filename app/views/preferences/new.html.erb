<h2 class="logo">Pick all the cuisines you're interested in:</h2>
<% session[:matchup_start] = false %>

<div class="preference-form"><%= form_for @preference, html:{class:'ui segment flex-container'} do |f| %>
<%= f.collection_check_boxes :cuisine_ids, Cuisine.all, :id, :name do |cb| %>
  <%= cb.label do %>
  <div class="check-box">
    <%= cb.check_box class:"check-box-input"%>
    <%= cb.text %>
  </div>
    <% end %><br>
    <% end %>
<%= f.collection_select :user_id, User.all, :id, :username %>
</div>
<div class="pick-food-btn" style="margin-top:10px">
  <%= f.submit "Let's go!", class:"massive ui red button" %>
</div>
<% end %>
